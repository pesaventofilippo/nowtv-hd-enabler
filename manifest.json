{
    "name": "NowTV HD Enabler",
    "description": "Enable HD steaming on NowTV web.",
    "version": "1.1",
    "author": "Filippo Pesavento",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.nowtv.it/*",
        "https://*.skycdn.it/*",
        "https://*.skycdp.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "nowtv-hd-enabler@pesaventofilippo.com"
        }
    }
}
